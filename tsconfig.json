{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2016",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["dom", "es2015", "es2016"],
    "jsx": "preserve",
    "charset": "utf8",
    "allowJs": true,
    "resolveJsonModule": true,
    "declaration": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "allowUnusedLabels": false,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "classnameTransform": "asIs", // set same value of css-loader option in webpack.
          "postCssOptions": {
            "useConfig": true,
            "excludePlugins": false
          }
        }
      }
    ]
  },
  "include": ["./src/**/*"],
  "exclude": []
}
